#!/usr/bin/python

import os, sys, logging

#print(os.path.isdir("/home/el"))
#print(os.path.exists("/home/el/myfile.txt"))

#logging.basicConfig(filename='example.log',level=logging.DEBUG)
logging.basicConfig(level=logging.WARNING)


def constant(f):
    def fset(self, value):
        raise TypeError
    def fget(self):
        return f()
    return property(fget, fset)


class _Const(object):
    @constant
    def RESOURCE_NAME():
	return "tvsea"

CONST = _Const()

def checkrspath():
    rspath = "~/." + CONST.RESOURCE_NAME + "/"
    logging.info("Resource name: {}".format(CONST.RESOURCE_NAME))
    logging.info("Resource path: {}".format(rspath))
    
    # check for exist resource path.
    if not os.path.exists(rspath):
        os.makedirs(rspath)
        logging.warning("[{}] is not exist.".format(rspath))
        sys.exit()
    elif not os.path.isdir(rspath):
        logging.warning("ERROR! {} is not directory!".format(rspath))
        sys.exit()
    elif os.path.isdir(rspath):
        logging.debug("[{}] path is exist OK.".format(rspath))

    
def checkqueuefile():
    logging.info("xxxxxxx");

checkrspath();
checkqueuefile();



